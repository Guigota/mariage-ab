<div class="container-form">
<textarea data-controller="textarea-autogrow">
Very long text here.
</textarea>
  <%= simple_form_for @guest, html: {
            data: {controller: "form" }
          } do |f| %>
  <%# <div class="d-flex wrapping-inline"> %>
                  <%= f.input :nom,
                              label: "Nom",
                              placeholder: "Desjardins",
                              error: "Merci de rentrer un nom",
                              wrapper_html: {
                                class: "form-inline-field-small"
                              }
                  %>
    <%= f.input :prenom,
                label: "Prénom",
                placeholder: "Marie-Louise",
                hint: "Merci d'indiquer le prénom de la personne répondant pour elle ou les personnes dont elle est responsable",
                error: "Merci de rentrer un prénom",
                wrapper_html: {
                  class: "form-inline-field-small"
                }
    %>
    <%# </div> %>
    <%= f.input :email,
                label: "Email",
                placeholder: "marie-louise.desjardins@gmail.com",
                hint: "La confirmation de participation sera envoyée sur cet email. Merci d'indiquer un email que vous consultez régulièrement",
                error: "Soit vous n'avez pas rentré d'email, soit il existe déjà un RSVP avec cet email",
                wrapper_html: {
                  class: "form-inline-field-small"
                }
    %>
    <%= f.input :participation,
                label: "Je serai présent-e ?",
                error: "Merci d'indiquer si vous serez présent-e ou non!",
                as: :radio_buttons,
                collection: [['Oui 🤩', 'Yes'], ["Non 😪", "No"]],
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'category-wrapper-accomp',
                item_wrapper_class: 'category-item-accomp',
                input_html: {
                  class: 'category-selector-accomp',
                  data: {action: "click->form#reveal",
                        form_target: "presence"}
                }


    %>
    <div class="details-participation d-none" data-form-target="infos">
      <%= f.input :plus_un,
                  label: "Je serai accompagné-e ?",
                  as: :radio_buttons,
                  collection: [['Oui 💏👨‍👩‍👧‍👦', 'Yes'], ["Non, je viens solo ☝🏼", "No"]],
                  collection_wrapper_tag: 'div',
                  collection_wrapper_class: 'category-wrapper-accomp',
                  item_wrapper_class: 'category-item-accomp',
                  input_html: {
                    class: 'category-selector-accomp',
                    data: {form_target: "plusUn"}}

      %>
      <%= f.input :nb_adultes,
                  label: "Merci d'indiquer combien de personnes de plus de 12 ans seront présentes",
                  as: :radio_buttons,
                  collection: (0..6),
                  collection_wrapper_tag: 'div',
                  collection_wrapper_class: 'category-wrapper-people',
                  item_wrapper_class: 'category-item-people',
                  input_html: {
                    class: 'category-selector-people',
                    data: {form_target: "adults"}}
      %>
      <%= f.input :nb_enfants,
                  label: "Merci d'indiquer le nombre d'enfants ayant entre 3 et 12 ans qui seront présents le jour du mariage",
                  as: :radio_buttons,
                  collection: (0..6),
                  collection_wrapper_tag: 'div',
                  collection_wrapper_class: 'category-wrapper-people',
                  item_wrapper_class: 'category-item-people',
                  input_html: {
                    class: 'category-selector-people',
                    data: {form_target: "kids"}}
      %>
      <%# <div class="d-flex justify-content-center"> %>
      <%= f.input :brunch,
                  # label: plus_un == true ? 'Nous serons présents au brunch le dimanche matin' : 'Je serai présent-e au brunch le dimanche',
                  as: :radio_buttons,
                  collection: [['Oui ! 🥐', 'Yes'], ["Non 💤", "No"]],
                  collection_wrapper_tag: 'div',
                  collection_wrapper_class: 'category-wrapper-accomp',
                  item_wrapper_class: 'category-item-accomp',
                  input_html: {
                    class: 'category-selector-accomp',
                    data: {form_target: "brunch"}}
      %>
      <%# </div> %>
      <%= f.input :hebergement,
                  label: "Pour l'hébergement ...",
                  collection: ["Nous dormirons sur place 🛌🏼", "Pas besoin de réserver des lits pour nous 👌🏼!"],
                  # collection: GUEST::HEBERGEMENT_MULTI,
                  as: :radio_buttons,
                  collection_wrapper_tag: 'div',
                  collection_wrapper_class: 'category-wrapper',
                  item_wrapper_class: 'category-item',
                  input_html: {
                    class: 'category-selector',
                    data: {form_target: "accomodation"}}

      %>
      <%= f.input :contraintes_alimentaires,
                  label: "Avez vous des allergies ou régimes alimentaires spécifiques ?",
                  placeholder: "🌱🧀🍣🍩🍭🌽🥜🌾",
                  as: :text,
                  input_html: {
                    data: {
                      controller: "textarea-autogrow"
                    }
                  }
      %>
      <%= f.input :musique,
                  label: "Quelles sont les musiques que vous aimeriez entendre lors de la fête ?",
                  placeholder: "🎺🎶🎷🎵🎸🥁🕺🏼💃🏼",
                  as: :text
      %>
    </div>
    <%= f.submit "Envoyer la réponse aux mariés", class: "btn btn-success" %>
  <% end %>


</div>
